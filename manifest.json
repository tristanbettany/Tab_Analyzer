{
    "name": "Tab Analyzer",
    "options_page": "options.html",
    "version": "0.1",
    "description": "An extension to analyse the current tab and improve its user experience",
    "author": "Tristan Bettany",
    "permissions": ["tabs", "activeTab", "storage", "http://*/*", "https://*/*"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "web_accessible_resources": [
        "options.html"
    ],
    "manifest_version": 2
}